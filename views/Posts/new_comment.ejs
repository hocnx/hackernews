<% include ../common/header %>
<a class="newsTitle" href=<%= post.url!=''?post.url:'#' %> > <%= post.title %> </a> <a class="info"><%= post.url != '' ? '(' + post.url + ')' : '' %></a>
  <br />
<div class="info">
  <span> <%= post.points %> points </span>by
  <a class="info"> <%= post.create_by %> </a>
  <a href=<%= '/comments/posts/'+ post.id %> class="info"> <%= post.timeTillNow %> </a> |
  <a href=<%= '/comments/posts/'+ post.id %> class="info"> <%= post.num_of_comments %> comments</a>
</div>

<br />
<div id="comments">
<form id="addCommentForm" method="POST"></form>
<textarea rows="4" cols="50" name="text" form="addCommentForm"></textarea>
<br />
<br />
<button type="submit" value="submit" class="orSpan" form="addCommentForm">submit</button>
<br />
<br />
<ul>
<% if(comments.length > 0) { %>
  <% comments.forEach(function(comment){ %>
    <li>
      <%- comment.html %>
    </li>
  <% }) %>
<% } %>
</ul>
</div>
<% include ../common/footer %>
